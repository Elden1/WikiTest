{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}
    <a href="/">
        <h1>Liste des voitures</h1>
    </a>
    <h3 class="presentation">Recherche de voitures disponibles</h3><br><br>
    <div class="filter-container">
        <div class="form-container">
            <form action="{{ path('recherche_voitures') }}" method="post">
                <label for="date_debut">Date début :</label>
                <input type="date" id="date_debut" name="date_debut" required><br><br>

                <label for="date_fin">Date fin :</label>
                <input type="date" id="date_fin" name="date_fin" required><br><br>

                <label for="prix_max">Prix maximum :</label>
                <input type="number" id="prix_max" name="prix_max"><br><br>

                <button type="submit">Rechercher</button>
            </form>
        </div>

        <ul class="voiture_ul">
            {% for voiture in voitures %}
            <a class="voiture_li" href="{{ path('modifier_voiture', {'id': voiture.id}) }}">
                <li>
                    <strong>Marque :</strong> {{ voiture.marque }}<br>
                    <strong>Modèle :</strong> {{ voiture.modele }}<br>
                    <strong>Prix :</strong> {{ voiture.prix }}<br>
                    <strong>Date début de location :</strong> {{ voiture.dateDebut ? voiture.dateDebut|date('Y-m-d') : 'Non spécifiée' }}<br>
                    <strong>Date fin de location :</strong> {{ voiture.dateFin|date('Y-m-d')}}<br>
                    <strong>Statut :</strong> {{ voiture.statut }}<br>
                </li>
            </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
